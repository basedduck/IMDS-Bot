<body>
    <div class="container">
        <div class="header">
            <h1>ðŸ”§ IMDS Bot</h1>
            <p>Part to WUC Code Lookup</p>
        </div>
        
        <div class="search-box">
            <input 
                type="text" 
                id="partInput" 
                placeholder="Enter part name (e.g., 'engine', 'hydraulic pump', 'avionics')"
                autocomplete="off"
            >
            <button onclick="searchPart()">Search</button>
        </div>
        
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>Searching...</p>
        </div>
        
        <div class="error" id="error"></div>
        
        <div class="no-results" id="noResults">
            No matches found. Try different keywords or check spelling.
        </div>
        
        <div class="results" id="results"></div>
        
        <div class="info">
            <strong>ðŸ’¡ Tip:</strong> You can search by partial part names. The bot will find similar matches automatically!
        </div>
    </div>

    <script>
        const partInput = document.getElementById('partInput');
        const loading = document.getElementById('loading');
        const error = document.getElementById('error');
        const noResults = document.getElementById('noResults');
        const resultsDiv = document.getElementById('results');
        
        // Allow Enter key to search
        partInput.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                searchPart();
            }
        });
        
        async function searchPart() {
            const partName = partInput.value.trim();
            
            if (!partName) {
                showError('Please enter a part name');
                return;
            }
            
            // Clear previous results
            clearResults();
            loading.classList.add('show');
            error.classList.remove('show');
            
            try {
                const response = await fetch('/api/search', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ part_name: partName })
                });
                
                const data = await response.json();
                loading.classList.remove('show');
                
                if (!response.ok) {
                    if (response.status === 404) {
                        noResults.classList.add('show');
                    } else {
                        showError(data.error || 'An error occurred while searching');
                    }
                    return;
                }
                
                displayResults(data.results);
                
            } catch (err) {
                loading.classList.remove('show');
                showError('Failed to connect to the server. Please try again.');
                console.error(err);
            }
        }
        
        function displayResults(results) {
            if (!results || results.length === 0) {
                noResults.classList.add('show');
                return;
            }
            
            let html = '';
            results.forEach(result => {
                html += `
                    <div class="result-item">
                        <h3>${result.part_name}</h3>
                        <div class="wuc-code">${result.wuc}</div>
                        <div class="result-detail"><strong>Description:</strong> ${result.description || 'N/A'}</div>
                        <div class="result-detail"><strong>Aircraft Type:</strong> ${result.aircraft_type || 'N/A'}</div>
                        <div class="match-score">Match Score: ${result.match_score}%</div>
                    </div>
                `;
            });
            
            resultsDiv.innerHTML = html;
            resultsDiv.classList.add('show');
        }
        
        function showError(message) {
            error.textContent = message;
            error.classList.add('show');
        }
        
        function clearResults() {
            resultsDiv.innerHTML = '';
            resultsDiv.classList.remove('show');
            noResults.classList.remove('show');
            error.classList.remove('show');
        }
    </script>
</body>
</html>
